<div class="datalist-footer flex">
    <div class="datalist-footer-left mr-auto">
        <div class="num_per_page text-dim">
            <select class="select form-control per-page" name="per_page">
                <option{{ items.perPage() == 5 ? ' selected' : '' }} value="5">5</option>
                <option{{ items.perPage() == 15 ? ' selected' : '' }} value="15">15</option>
                <option{{ items.perPage() == 30 ? ' selected' : '' }} value="30">30</option>
                <option{{ items.perPage() == 50 ? ' selected' : '' }} value="50">50</option>
                <option{{ items.perPage() == 100 ? ' selected' : '' }} value="100">100</option>
            </select>
            items per page
            {% if items %}
                |
                {{ trans('messages.total_items_count', {
                    "from": items.toArray()["per_page"]*(items.toArray()["current_page"]-1)+1,
                    "to": (items.toArray()["per_page"]*items.toArray()["current_page"] > items.toArray()["total"] ? items.toArray()["total"] : items.toArray()["per_page"]*items.toArray()["current_page"]),
                    "count": items.toArray()["total"]
                })|raw }}
                <input type="hidden" name="total_items_count" value="{{ items.toArray()["total"] }}" />
            {% endif %}
        </div>
    </div>
    <div class="datalist-footer-right">
        {{ items.links()|raw }}
    </div>
</div>
