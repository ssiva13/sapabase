        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item text-small text-semibold">
                    <a class="nav-link" href="{{ route('admin.home') }}">Home</a>
                </li>
                <li class="nav-item text-small dropdown text-semibold">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Customer
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-left" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Customers
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Groups
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('AccountController@profile') }}">
                          Subscriptions
                        </a>
                    </div>
                </li>
                <li class="nav-item text-small dropdown text-semibold">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Plan
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-left" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Plan
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Currencies
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Payment Gateways
                        </a>
                    </div>
                </li>
                <li class="nav-item text-small dropdown text-semibold">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Admin
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-left" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Admins
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Groups & Permissions
                        </a>
                    </div>
                </li>
                <li class="nav-item text-small dropdown text-semibold">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Settings
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-left" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          All Settings
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\TemplateController@index') }}">
                          Template Gallery
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Languages
                        </a>
                    </div>
                </li>
                <li class="nav-item text-small dropdown text-semibold">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Logs & Report
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-left" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Customer Activities
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Funnel Logs
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          System Logs
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Page Open Logs
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('Admin\\CustomerController@index') }}">
                          Link Click Logs
                        </a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown text-small text-semibold{% if 'automations' in page %} active{% endif %} ">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="media media-small inline-block mr-10">
                            <img src="http://i.pravatar.cc/300?v={{ auth_user().id }}" />
                        </span>
                        {{ auth_user().email }}
                    </a>
                    <div class="dropdown-menu has-border dropdown-menu-right" aria-labelledby="dropdown01">
                        <a class="dropdown-item text-semibold" href="{{ action('HomeController@index') }}">
                          Frontend
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ action('AccountController@profile') }}">
                          Account Details
                        </a>
                        <a class="dropdown-item text-semibold" href="{{ route('logout') }}" link-method="POST">
                            Logout
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container{{ block('sidebar') ? ' has-sidebar' : '' }}">
        {% if block('sidebar') %}
            <div class="sidebar">
                {% block sidebar %}{% endblock %}
            </div>
        {% endif %}

        <div class="content">
            {% if block('page_header') %}
                <div class="page-header flex">
                    <h1 class="text-semibold mr-auto">{% block page_header %}{% endblock %}</h1>
                    {% block page_actions %}{% endblock %}
                </div>
            {% endif %}

            {% include ux('layouts/_page_alerts') %}
            {% block content %}{% endblock %}
        </div>

    </div><!-- /.container -->

    {% block js %}
        {% include ux('layouts/_js') %}
        {% include ux('layouts/_page_notifies') %}
    {% endblock %}
  </body>
</html>
