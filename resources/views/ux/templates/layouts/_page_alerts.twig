{% if errors is not empty %}
    <!-- Form Error List -->
    <div class="alert alert-danger alert-noborder mb-lvl4 text-small pd-lvl2">
        <button data-dismiss="alert" class="close" type="button"><span>Ã—</span><span class="sr-only">Close</span></button>
        <span class="text-semibold">{{ trans('messages.form_error_message') }}</span>
    </div>
{% endif %}
{% if errors.any() %}
    <div class="alert alert-danger">
        <ul>
            {% for error in errors.all() %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
